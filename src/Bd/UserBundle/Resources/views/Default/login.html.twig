{% extends "::layout-login.html.twig" %}
{% block title %}
  Login - {{ parent() }}
{% endblock %}
{% block body %}

  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-error">{{ error.message }}</div>
  {% endif %}



  <form action="{{ path('login_check') }}" method="post" class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input type="text" class="input-block-level" placeholder="Email address"  id="username" name="_username" value="{{ last_username }}" >
        <input type="password" class="input-block-level" placeholder="Password" id="password" name="_password" >
        <label class="checkbox">
          <input type="checkbox" value="remember-me"> Remember me
        </label>
        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
      </form>

{% endblock %}